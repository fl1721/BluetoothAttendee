<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.csc_331_jagwares.bluetoothattendee.fragments.ClassFragment">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">
            <TextView
                android:id="@+id/tvClassName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/tvClassCRN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/tvClassSemester"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="1"
                android:gravity="right"
                android:text="" />

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">
            <TextView
                android:id="@+id/tvClassTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="1"
                android:lines="1"
                android:ellipsize="end"
                android:text="" />
            <TextView
                android:id="@+id/tvClassDays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="right"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">
            <TextView
                android:id="@+id/tvClassLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_weight="1"
                android:text="" />
            <TextView
                android:id="@+id/tvClassTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="right"
                android:text="" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/tvClassProfName"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_span="2"
                android:text="" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/tvClassNumStudents"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_span="2"
                android:text="" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Button
        android:id="@+id/rosterBtn"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/attendanceBtn"
        android:layout_alignStart="@+id/attendanceBtn"
        android:layout_alignTop="@+id/tableLayout"
        android:layout_marginTop="146dp"
        android:layout_gravity="center"
        android:text="View Class Roster" />

    <Button
        android:id="@+id/attendanceBtn"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registerBtn"
        android:layout_alignStart="@+id/registerBtn"
        android:layout_below="@+id/rosterBtn"
        android:layout_gravity="center"
        android:text="Take Attendance" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attendanceBtn"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Register Students" />

</RelativeLayout>
